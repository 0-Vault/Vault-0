{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Vault-0",
  "version": "1.1.0",
  "identifier": "app.vault0.desktop",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:5173",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "Vault-0",
        "width": 1000,
        "height": 700,
        "minWidth": 600,
        "minHeight": 400
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "macOS": {
      "minimumSystemVersion": "10.15"
    },
    "windows": {
      "certificateThumbprint": null,
      "digestAlgorithm": "sha256",
      "timestampUrl": ""
    },
    "longDescription": "Secure desktop dashboard for autonomous AI agents. Zero plaintext secrets, policy-controlled actions, native x402 payments.",
    "shortDescription": "Secure agent control center",
    "category": "DeveloperTool",
    "copyright": ""
  },
  "plugins": {
    "shell": {
      "open": true
    }
  }
}
